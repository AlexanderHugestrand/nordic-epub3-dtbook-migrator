    <!-- head -->
    <x:scenario label="when processing a head element">
        <x:context>
            <dtbook:head>...</dtbook:head>
        </x:context>
        <x:expect label="the head element should be converted into a head element">
            <html:head>...</html:head>
        </x:expect>
    </x:scenario>

